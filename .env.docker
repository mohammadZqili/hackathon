# Docker Environment Configuration for GuacPanel
# Copy this file to .env and configure for your environment

APP_NAME="GuacPanel Hackathon Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database Configuration (MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=guacpanel
DB_USERNAME=guacpanel_user
DB_PASSWORD=guacpanel_pass

# Session and Cache (Redis)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=guacpanel

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Mailpit for development, configure SMTP for production)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@guacpanel.com"
MAIL_FROM_NAME="${APP_NAME}"

# For production, use real SMTP settings:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# Search Configuration (Typesense)
SCOUT_DRIVER=typesense
TYPESENSE_API_KEY=your_secure_typesense_api_key_here
TYPESENSE_HOST=typesense
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_SEARCH_ONLY_KEY=your_search_only_key_here

# OAuth Settings (Optional - configure if needed)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=${APP_URL}/auth/github/callback

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# Application Specific Settings
VITE_APP_NAME="${APP_NAME}"

# File Upload Settings (handled by Docker/PHP config)
# MAX_FILE_SIZE=15MB (configured in docker/php.ini)
# MAX_FILES_PER_IDEA=8

# Backup Settings (for production)
# BACKUP_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=
# AWS_BUCKET=

# Security Settings
# Enable 2FA if needed
# TWO_FACTOR_ENABLED=false

# SMS Settings (Optional - for 2FA or notifications)
# SMS_DRIVER=
# SMS_API_KEY=
# SMS_FROM=

# Social Media Integration (Optional)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_TOKEN_SECRET=

# Monitoring (Optional)
# SENTRY_LARAVEL_DSN=
# TELESCOPE_ENABLED=false
